pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    environment {
        DOCKER_IMAGE = "sujeetsr07/frontend2"
        IMAGE_TAG    = "${BUILD_NUMBER}"   // BEST PRACTICE
        GIT_BRANCH   = "main"
        GIT_REPO     = "github.com/sujeetsrahate/devops-project.git"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: "${GIT_BRANCH}",
                    url: "https://${GIT_REPO}",
                    credentialsId: 'github-app-creds'
            }
        }

        stage('Install & Build Frontend') {
            steps {
                dir('frontend') {
                    sh '''
                      npm install
                      npm run build
                    '''
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('frontend') {
                    sh '''
                      docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} .
                    '''
                }
            }
        }

        stage('Docker Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                      docker push ${DOCKER_IMAGE}:${IMAGE_TAG}
                    '''
                }
            }
        }

        stage('Update Deployment YAML (GitOps)') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'github-push-creds',
                    usernameVariable: 'GIT_USER',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    sh '''
                      echo "Cleaning workspace noise"
                      git restore frontend/ || true

                      echo "Updating image in k8s/frontend.yaml"
                      sed -i "s|image: .*|image: ${DOCKER_IMAGE}:${IMAGE_TAG}|" k8s/frontend.yaml

                      echo "Checking if manifest actually changed"
                      if git diff --quiet k8s/frontend.yaml; then
                        echo "No image change detected. Skipping Git commit."
                        exit 0
                      fi

                      git config user.email "jenkins@ci.local"
                      git config user.name "jenkins"

                      git add k8s/frontend.yaml
                      git commit -m "ci: update frontend image to ${DOCKER_IMAGE}:${IMAGE_TAG}"

                      git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@${GIT_REPO}
                      git push origin ${GIT_BRANCH}
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "CI pipeline completed successfully. Argo CD will sync automatically ðŸš€"
        }
        failure {
            echo " CI pipeline failed"
        }
        always {
            sh 'docker logout || true'
        }
    }
}
